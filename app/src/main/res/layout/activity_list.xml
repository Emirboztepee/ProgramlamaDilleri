<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.E2_ListActivity">
    <ImageView
        android:id="@+id/imgKapak"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ImageView_height_list"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/banner1" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcvDiller"
        android:layout_width="match_parent"
        android:layout_height="@dimen/RecyclerView_height_list"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgKapak"
        tools:layout_editor_absoluteX="220dp"
        tools:listitem="@layout/cardview_kod_diller" />

</androidx.constraintlayout.widget.ConstraintLayout>